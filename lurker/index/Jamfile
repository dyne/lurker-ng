SubDir TOP index ;
SubDirHdrs $(TOP) libesort ;
SubDirHdrs $(TOP) common ;

# don't rely on Yacc being available (plus the rule has crappy grist support)
# Yacc getdate.cpp : getdate.y ;

Main lurker-index  : Index.cpp main.cpp getdate.cpp ;
Main lurker-list   : list.cpp ;
Main lurker-params : params.cpp ;

LinkLibraries lurker-index  : libcommon libesort ;
LinkLibraries lurker-list   : libcommon ;
LinkLibraries lurker-params : libcommon ;

InstallBin $(BINDIR) : lurker-index lurker-list lurker-params ;
InstallFile $(VARDIR)/lib/$(PACKAGE) : stub ;

InstallMan $(MANDIR) : lurker-index.1 lurker-list.1 lurker-params.1 ;
