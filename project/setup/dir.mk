# These are options people expect in configure, so lets include them

opt_prefix      = /usr/local
opt_exec_prefix = $(prefix)
opt_bindir      = $(exec_prefix)/bin
opt_libdir      = $(exec_prefix)/lib
opt_sysconfdir  = $(prefix)/etc
opt_datadir     = $(prefix)/share
opt_mandir      = $(datadir)/man
opt_docdir      = $(datadir)/doc
opt_infodir     = $(datadir)/info
